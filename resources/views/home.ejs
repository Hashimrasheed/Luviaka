<!-- Hero Section Begin -->
<section class="hero" style="margin-top: 2rem;">
  <div class="container">
      <div class="row">
          
          <div class="col-lg-9">
              
              <div class="hero__item set-bg " style="background-image: url('/img/hero/luviakahero.jpg')">
                <div ></div>
                  <div class="hero__text">
                      <span>PURE ART</span>
                      <h2>ART PRODUCTS</h2>
                      <h4 class="text-light">100% Handmade</h4>
                      <p class="text-light pt-4">Free Pickup and Delivery Available</p>
                      <form action="#products">
                        <button type="submit" class=" btn-dark my-3" style="border-radius: 30%;">
                          <span class="primary-btn p-3">SHOP NOW</span>
                        </button>
                      </form>
                      
                  </div>
              </div>
              
          </div>
          <div class="col-lg-3">
           
            <div class="hero__categories">
                <div class="hero__categories__all">
                    <i class="fa fa-bars"></i>
                    <span>All Categories</span>
                </div>
                <ul>
                  <% category.forEach(function(category) { %>
                    <li><a style="text-decoration: none;" href="#products"><%= category.category %></a></li>
                  <% }) %>
                </ul>
            </div>
        </div>
      </div>
  </div>
</section>
<!-- Hero Section End -->


   


