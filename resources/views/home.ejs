<!-- cards -->
<section id="products">
  <div class="container-fluid">
        <div class="row">
          <% items.forEach(function(item) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
              <div class="tile">
                  <div class="wrapper">
                    <form action="/product">
                      <div class="banner-img h-40 flex items-center justify-around">
                        <a href="/products/<%= item._id %>"><img style="margin: auto; width: 50%;" src="/img/products/<%= item.image %>" alt="Image"></a>
                        
                        
                      </div>
                    </form>
                    
                      <div class="header" ><%= item.name %></div>
                      
                      <div class="footer flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= item.price %></span>
                          <button data-item="<%= JSON.stringify(item) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                      </div>

                  </div>
              </div> 
            </div>
            <!-- popup window -->
            
          <% }) %>
            
        </div>
    </div>
</section>
