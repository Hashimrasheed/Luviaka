<div class="main">
    <h1 class="m-5">Welcome Admin</h1>
    <section>
        <div class="row mt-5">
            <div class="card text-white bg-dark mb-3 ml-4" style="min-width: 17rem; align-items: center;">
                <div class="card-header">Total Orders</div>
                <div class="card-body">
                  <h5 class="card-title"><%= orders %></h5>
                </div>
              </div>
              <div class="card text-white bg-dark mb-3" style="min-width: 17rem; align-items: center;">
                <div class="card-header">Pending Orders</div>
                <div class="card-body">
                  <h5 class="card-title"><%= pending %></h5>
                </div>
              </div>
              <div class="card text-white bg-dark mb-3" style="min-width: 17rem; align-items: center;">
                <div class="card-header">Number of Users</div>
                <div class="card-body">
                  <h5 class="card-title"><%= customerCount %></h5>
                </div>
              </div>
              <div class="card text-white bg-dark mb-3" style="min-width: 17rem; align-items: center;">
                <div class="card-header">Total Products</div>
                <div class="card-body">
                  <h5 class="card-title"><%= totalMenu %></h5>
                </div>
              </div>
        </div>
        <div class="row mt-5">
          <div class="card text-white bg-dark mb-3 ml-4" style="min-width: 17rem; align-items: center;">
              <div class="card-body">
              <div class="card-header"><a href="/admin/orders">All Orders</a></div>

              </div>
            </div>
            <div class="card text-white bg-dark mb-3" style="min-width: 17rem; align-items: center;">
              <div class="card-body">
              <div class="card-header"><a href="/admin/allproducts">All Products</a></div>
                
              </div>
            </div>
            <div class="card text-white bg-dark mb-3" style="min-width: 17rem; align-items: center;">
              <div class="card-body">
              <div class="card-header"><a href="/admin/category">Categories</a> </div>
                
              </div>
            </div>
            <div class="card text-white bg-dark mb-3" style="min-width: 17rem; align-items: center;">
              <div class="card-body">
              <div class="card-header"><a href="/admin/addProduct">Add Product</a></div>
                
              </div>
            </div>
      </div>
    </section>
</div>


