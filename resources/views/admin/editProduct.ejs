<%- include('../partials/adminheader.ejs') %>
<%- include('../partials/adminnav.ejs') %>


<div class="main">
    <div class="container">
        <div class=" text-center mt-5 ">
           <h1>Edit Product</h1>
       </div>
   <div class="row ">
       <div class="col-lg-7 mx-auto">
           <div class="card mt-2 mx-auto p-4 bg-light">
               <div class="card-body bg-light">
                   <div class="container">
                       <form id="contact-form" action="/admin/editProductSave" enctype="multipart/form-data" method="POST" role="form">
                           <div class="controls">
                               <div class="row">
                                   <div class="col-md-6">
                                       <div class="form-group"> <label for="form_name">Product Name</label> <input id="form_name" value="<%= menus.name %>" type="text" name="name" class="form-control" required="required" data-error="Firstname is required."> </div>
                                   </div>
                                   <div class="col-md-6">
                                       <div class="form-group"> <label for="form_lastname">Artist Name</label> <input id="form_lastname" value="<%= menus.artist %>" type="text" name="artistName" class="form-control" required="required" data-error="Lastname is required."> </div>
                                   </div>
                               </div>
                               <div class="row">
                                   <div class="col-md-6">
                                       <div class="form-group"> <label for="form_email">Product Rate</label> <input id="form_email" value="<%= menus.price %>" type="text" name="rate" class="form-control" required="required" data-error="Valid email is required."> </div>
                                   </div>
                                   <div class="col-md-6">
                                       <div class="form-group"> <label for="form_need">Product category</label>
                                            <select id="form_need" name="need" class="form-control" data-error="Please specify your need."  required="required">
                                                <option value="<%= menus.category %>" ><%= menus.category %></option>
                                               <% category.forEach((category) => { %>
                                                <option><%= category.category %></option>
                                               <% }) %>
                                           </select>
                                        </div>
                                   </div>
                               </div>
                               <div class="row">
                                    
                                    <div class="col-md-12">
                                        <label for="form_image">Product image</label>
                                        <br>
                                        <img src="/img/<%= menus.image %>" style="width: 4rem; height: 4rem;" alt="">
                                        <input type="file" value="<%= menus.image %>" id="myFile" name="image">
                                        <br>
                                    </div>
                                </div>
                               <div class="row">
                                   <div class="col-md-12">
                                       <div class="form-group"> <label for="form_message">Product Discripsion</label> <textarea id="form_message" name="discripsion" class="form-control" rows="4" required="required" data-error="Please, leave us a message."><%= menus.discripsion %></textarea> </div>
                                   </div>
                                   <div class="col-md-12">
                                        <input type="hidden" name="id" value="<%= menus._id %>">
                                       <input type="submit" class="btn btn-success btn-send pt-2 btn-block " value="Add product">
                                    </div>
                               </div>
                           </div>
                       </form>
                   </div>
               </div>
           </div> <!-- /.8 -->
       </div> <!-- /.row-->
   </div>
   </div>
   
</div> 


<%- include('../partials/adminfooter.ejs') %>
